<Window x:Class="FractionTrainer.LearningModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FractionTrainer"
        mc:Ignorable="d"
        Title="Режим обучения"
        Height="720" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FFEAEAEA" 
        WindowStyle="None" BorderThickness="1" BorderBrush="#FFCCCCCC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5,15,5,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="59"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="59"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" Grid.Column="0" 
                    Style="{StaticResource ArrowBackButton}" 
                    Click="BackButton_Click"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center"
                    Margin="5,0,0,0"/>
            <TextBlock Grid.Column="1" Text="Соберите дробь:" 
                       Style="{StaticResource ModernTitleText}" 
                       Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="0,0,0,10">

            <TextBlock x:Name="NumeratorTextBlock" Text="3" Style="{StaticResource FractionDisplayText}"
                       Padding="0" LineHeight="58" HorizontalAlignment="Center" Margin="0,0,0,-8"/>

            <Rectangle Height="4" Width="80" Fill="{Binding Foreground, ElementName=NumeratorTextBlock}" 
                       Margin="0" HorizontalAlignment="Center"/>

            <TextBlock x:Name="DenominatorTextBlock" Text="8" Style="{StaticResource FractionDisplayText}"
                       Padding="0" LineHeight="58" HorizontalAlignment="Center" Margin="0,-8,0,0"/>
        </StackPanel>

        <Border Grid.Row="2" 
                Margin="30,15,30,15" 
                Background="White" CornerRadius="10" BorderBrush="#FFDDDDDD" BorderThickness="1">
            <local:FractionShapeVisualizer x:Name="FractionDisplay" Margin="10"/>
        </Border>

        <Button x:Name="CheckButton" Grid.Row="3" Content="Проверить" 
                Width="200" Height="50" 
                Style="{StaticResource ModernButton}" 
                Click="CheckButton_Click"
                Margin="10,10,10,20"/>

    </Grid>
</Window>