<Window x:Class="FractionTrainer.LearningModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FractionTrainer"
        mc:Ignorable="d"
        Title="Режим обучения"
        Height="720" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FFEAEAEA" 
        WindowStyle="None" BorderThickness="1" BorderBrush="#FFCCCCCC">

    <Grid>
        <!-- Внутренний Grid для всего контента -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок и кнопка Назад -->
                <RowDefinition Height="Auto"/>
                <!-- Целевая дробь -->
                <RowDefinition Height="*"/>
                <!-- Фигура -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки +/- доля -->
                <RowDefinition Height="Auto"/>
                <!-- Контейнер для кнопки и панели -->
            </Grid.RowDefinitions>

            <!-- Строка 0, 1, 2, 3 - остаются без изменений -->
            <Grid Grid.Row="0" Margin="5,15,5,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButtonTop" Grid.Column="0" Style="{StaticResource ArrowBackButton}" Click="BackButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Соберите дробь:" Style="{StaticResource ModernTitleText}" FontSize="22" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock x:Name="NumeratorTextBlock" Text="5" Style="{StaticResource FractionDisplayText}" Padding="0" Margin="0,0,0,-12"/>
                <Rectangle Height="3" Width="50" Fill="{Binding Foreground, ElementName=NumeratorTextBlock}" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                <TextBlock x:Name="DenominatorTextBlock" Text="8" Style="{StaticResource FractionDisplayText}" Padding="0" Margin="0,-12,0,0"/>
            </StackPanel>
            <Border Grid.Row="2" Margin="30,15,30,15" Background="White" CornerRadius="10" BorderBrush="#FFDDDDDD" BorderThickness="1">
                <local:FractionShapeVisualizer x:Name="FractionDisplay" Margin="10"/>
            </Border>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button x:Name="DecreaseDenominatorButton" Content="- доля" Style="{StaticResource ModernButton}" Background="#FF6c757d" Width="120" Height="40" Click="DecreaseDenominatorButton_Click"/>
                <Button x:Name="IncreaseDenominatorButton" Content="+ доля" Style="{StaticResource ModernButton}" Background="#FF6c757d" Width="120" Height="40" Click="IncreaseDenominatorButton_Click"/>
            </StackPanel>

            <!-- Строка 4: Единый контейнер для кнопки и обратной связи -->
            <Grid Grid.Row="4" x:Name="BottomBarContainer" Margin="10,10,10,20">
                <!-- Этот Border будет служить фоном для всей панели -->
                <Border x:Name="FeedbackBackground"
                        Background="Transparent"
                        CornerRadius="5"
                        Height="50"/>

                <!-- Внутренняя сетка для размещения текста и кнопки -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Левая часть для текста -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Центральная часть для кнопки -->
                        <ColumnDefinition Width="*"/>
                        <!-- Правая часть (пустая) -->
                    </Grid.ColumnDefinitions>

                    <!-- Текст обратной связи, изначально скрыт -->
                    <TextBlock x:Name="FeedbackText" Grid.Column="0"
                               Text="✓"
                               Foreground="#006400"
                               FontSize="25"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               Visibility="Collapsed"/>

                    <!-- Кнопка Проверить/Продолжить/Заново -->
                    <Button x:Name="CheckButton" Grid.Column="1"
                            Content="Проверить" 
                            Width="200" Height="50" 
                            Style="{StaticResource ModernButton}" 
                            Click="CheckButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
